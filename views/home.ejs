<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h2>URL shortner</h2>
    <% if (locals.id) { %>
     <p>Generated url:http://localhost:9010/wait/<%= id %></p>  
    <% } %>
    <form action="/url" method="POST">
        <label>URL:</label>
        <input type="text" name="url" required placeholder="https://example.com">
        <br><br>
        <button type="submit">Generate</button>
        <br><br>
        <br><br>
    </form>
    <div>
        <% if (locals.urls) { %>
            <table border="2">
                <thead>
                    <tr>
                        <th>S.NO.</th>
                        <th>shortID</th>
                        <th>originalURL</th>
                        <th>totalclicks</th>
                    </tr>
                </thead>
                <tbody>
                    <% urls.forEach((u,index) => { %>
    
                    <tr>
                    <td><%= index+1 %></td>
                    <td><%= u.shortId %></td>
                    <td><%= u.redirecturl %></td>
                    <td><%= u.visithistory.length %></td>
                    </tr>
    
                    <% }) %>
                </tbody>
            </table>
        <% } %>
    </div>
</body>
</html>